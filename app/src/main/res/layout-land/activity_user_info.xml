<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.phonenumberlist.UserInfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <ImageView
            android:id="@+id/imageId"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/nameSurnameId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageId"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="27dp"
            android:textColor="#000000"
            android:text="Name_Surname"/>
        <TextView
            android:id="@+id/phoneNumID"
            android:layout_below="@+id/nameSurnameId"
            android:layout_toRightOf="@+id/imageId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="#E65100"
            android:textSize="19dp"
            android:text="Mobile: "/>
        <TextView
            android:id="@+id/emailID"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imageId"
            android:textColor="#558B2F"
            android:textSize="19dp"
            android:layout_below="@+id/genderId"
            android:text="E-mail: "/>
        <TextView
            android:id="@+id/genderId"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="23dp"
            android:layout_toRightOf="@+id/imageId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#558B2F"
            android:layout_below="@+id/phoneNumID"
            android:text="Gender: "/>

        <TextView
            android:id="@+id/addressID"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imageId"
            android:textSize="17dp"
            android:textColor="#558B2F"
            android:layout_below="@+id/emailID"
            android:text="Address: "/>



    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
